#!/usr/bin/env ruby

require 'dashboard'
require 'spruz/go'
include Spruz::GO

$opt = go 'd'

config_file_name = File.join(ENV['HOME'], '.dashboardrc')
config = Dashboard::Config.interpret_config_file config_file_name
client = Dashboard::Client.new(config)
client.debugging = $opt['d']
case cmd = ARGV.shift
when 'pending'
  puts client.pending
when 'dry_run'
  client.dry_run = true
  reports = client.run
  jj reports
when 'measure', nil
  reports = client.run
end
exit reports && reports.any?(&:failure?) ? 1 : 0
